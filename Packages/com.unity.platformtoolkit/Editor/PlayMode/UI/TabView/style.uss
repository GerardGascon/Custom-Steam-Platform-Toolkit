
.unity-tab-view > .unity-tab-view__content-viewport > #unity-tab-view__header-container > #unity-tab__header {
    flex-shrink: 0;
    flex-grow: 1;
    min-height: 30px;
}

/*  Undo some settings applied by a tab-view override for scrollbars in the base themes.
    These make sense only if the tabview content is as the tabview header */
.unity-tab-view .unity-scroll-view__vertical-scroller .unity-repeat-button {
    background-color: var(--unity-colors-scrollbar_button-background);
    height: 16px;
    width: 12px;
}

.unity-tab-view .unity-scroll-view__horizontal-scroller .unity-repeat-button {
    background-color: var(--unity-colors-scrollbar_button-background);
    height: 12px;
    width: 16px;
}

.unity-tab-view {
    margin-top: 15px;
}

.unity-tab-view__content-viewport {
    flex-shrink: 0;
}

.unity-tab-view__content-container {
    flex-shrink: 1;
    flex-grow: 1;
    padding-top: 15px;
}
